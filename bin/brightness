#!/bin/bash
# changeBrightness

# Arbitrary but unique message tag
msgTag="mybrightness"

light "$@" > /dev/null

bright="$(light)"

# Show the light notification
/usr/bin/dunstify -a "changeVolume" \
             -u low \
             -i bright \
             -h string:x-dunst-stack-tag:$msgTag \
             -h int:value:"$bright" \
             "Brightness: ${bright}%"
